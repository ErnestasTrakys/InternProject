<mvc:View controllerName="visionBoardProject.internproject.controller.Upload"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <App>
        <pages>
            <Page title="{i18n>title}" >
                <content>
                    <Panel headerText="Upload">
                    <content>
                    <Table 
                                id="userSelectionTable"
                                items="{/value}">
                                <columns>
                                    <Column>
                                        <Button id="homeButton" icon="{i18n>sap-icon://home}" text="{i18n>Home}" press=".homeRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="friendsButton" icon="{i18n>sap-icon://group}" text="{i18n>Friends}" press=".friendsRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="notificationsButton" icon="{i18n>sap-icon://bell}" text="{i18n>Notifications}" press=".notificationsRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="profileButton" icon="{i18n>sap-icon://customer}"  text="{i18n>Profile}" press=".profileRoute" />
                                    </Column>
                                    
                                </columns>


                                <SearchField liveChange=".onSearch"/>
                            </Table>
                            
                            <FlexBox direction="Column" class="sapUiLargeMarginTop">
                                
                            </FlexBox>
                                        
                        
                        </content>
                    </Panel>
                    
                </content>
                <UploadCollection
			id="UploadCollection"
			maximumFilenameLength="55"
			maximumFileSize="10"
			multiple="false"
			change="onChange"
			fileSizeExceed="onFileSizeExceed"
			selectionChange="onSelectionChange"
			typeMissmatch="onTypeMissmatch"
			uploadComplete="onUploadComplete"
			beforeUploadStarts="onBeforeUploadStarts"
			items="{
				path: '/items',
				templateShareable: false
			}"
			mode="MultiSelect">
			<toolbar>
				<OverflowToolbar id="myId">
					<Title id="attachmentTitle" />
					<ToolbarSpacer />
					<Button
						id="downloadButton"
						text="Download"
						press="onDownloadItem"
						enabled="false"
						type="Transparent" />
					<Button
						id="versionButton"
						text="Upload a new version"
						press="onVersion"
						enabled="false"
						type="Transparent" />
					<UploadCollectionToolbarPlaceholder/>
				</OverflowToolbar>
			</toolbar>
			<items>
				<UploadCollectionItem
					documentId="{documentId}"
					fileName="{fileName}"
					mimeType="{mimeType}"
					thumbnailUrl="{thumbnailUrl}"
					url="{url}"
					enableEdit="false"
					enableDelete="false"
					visibleDelete="false"
					visibleEdit="false"
					attributes="{
						path: 'attributes',
						templateShareable: false
					}"
					statuses="{
						path: 'statuses',
						templateShareable: false
					}"
					selected="{selected}">
					<attributes>
						<ObjectAttribute
							title="{title}"
							text="{
								parts: [ 'text', 'type' ],
								formatter : '.formatAttribute'
							}"
							active="false" />
					</attributes>
					<statuses>
						<ObjectStatus title="{title}"
							text="{text}"
							state="{state}" />
					</statuses>
				</UploadCollectionItem>
			</items>
		</UploadCollection>
                <!-- <UploadCollection
			id="UploadCollection"
			uploadComplete="onUploadComplete"
			fileDeleted="onFileDeleted">
			<toolbar>
				<OverflowToolbar>
					<Breadcrumbs id="breadcrumbs" currentLocationText="{/currentLocationText}" links="{/history}">
						<Link press="onBreadcrumbPress" text="{name}" />
					</Breadcrumbs>
					<ToolbarSpacer />
					<UploadCollectionToolbarPlaceholder />
				</OverflowToolbar>
			</toolbar>
		</UploadCollection>  -->
        <Input
			placeholder="About Upload..."
			ariaDescribedBy="descriptionNodeId"
			description=""
			width="400px"
			fieldWidth="75%"
            showClearIcon="true"
			class="sapUiSmallMarginBottom" />
		     
            </Page>
        </pages>
    </App>

</mvc:View>