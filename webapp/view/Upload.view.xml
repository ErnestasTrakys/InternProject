<mvc:View controllerName="visionBoardProject.internproject.controller.Upload"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    
    <App>
        <pages>
            <Page title="{i18n>title}" >
                <content>
                    <Panel headerText="Upload">
                    <content>
                    <Table 
                                id="userSelectionTable"
                                items="{/value}">
                                <columns>
                                    <Column>
                                        <Button id="homeButton" text="{i18n>Home}" press=".homeRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="friendsButton" text="{i18n>Friends}" press=".friendsRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="notificationsButton" text="{i18n>Notifications}" press=".notificationsRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="profileButton" text="{i18n>Profile}" press=".profileRoute" />
                                    </Column>
                                    
                                </columns>


                                <SearchField liveChange=".onSearch"/>
                            </Table>
                            
                            <FlexBox direction="Column" class="sapUiLargeMarginTop">
                                <Button id="image_input" text="Upload File" press=".uploadPicture" class="sapUiLargeMarginEnd" />
                                <input type="file" id="image_input" accept="image/png, image/jpg"/>
                            </FlexBox>
                            
                                
                           
                        
                        </content>
                    </Panel>

                    
                </content>
            </Page>
        </pages>
    </App>

</mvc:View>