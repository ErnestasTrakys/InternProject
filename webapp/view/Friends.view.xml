<mvc:View controllerName="visionBoardProject.internproject.controller.Upload"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">

    <App>
        <pages>
            <Page title="{i18n>title}" >
                <content>
                    <Panel headerText="Friends">
                    <content>
                    <Table 
                                id="userSelectionTable"
                                items="{/value}">
                                <columns>
                                    <Column>
                                        <Button id="uploadButton" icon="{i18n>/icons/upload.gif}" text="{i18n>Upload}" press=".uploadRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="homeButton" icon="{i18n>/icons/home.gif}" text="{i18n>Home}" press=".homeRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="notificationsButton" icon="{i18n>/icons/notif.gif}" text="{i18n>Notifications}" press=".notificationsRoute" />
                                    </Column>
                                    <Column>
                                        <Button id="profileButton" icon="{i18n>/icons/profile.gif}" text="{i18n>Profile}" press=".profileRoute" />
                                    </Column>      
                                </columns>
                                <SearchField liveChange=".onSearch"/>
                            </Table>
                            
                            <SearchField liveChange=".onSearch"/>
                                <FlexBox direction="Column" class="sapUiMediumMarginTop">
                                    <FlexBox alignItems="Center" justifyContent="End" class="pageControls" >
                                        <ObjectStatus id="searchStatus" text="" />
                                    </FlexBox>
                                </FlexBox>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>

</mvc:View>