<mvc:View controllerName="visionBoardProject.internproject.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
            xmlns:main="sap.ui.webc.main"
            xmlns="sap.m"
            xmlns:l="sap.ui.layout">

            <App>
        <pages>
            <Page title="{i18n>title}" >
                <content>
                    <Panel headerText="Home">
                    <content>
                    <ScrollContainer height='100rem' vertical='true'>
                    <Table >
                                <columns>
                                    <Column>
                                        <Button id="uploadButton" icon="{i18n>sap-icon://upload}" text="{i18n>Upload}" press=".uploadRoute" class="sapUiTinyMarginEnd" />
                                    </Column>
                                    <Column>
                                        <Button id="friendsButton" icon="{i18n>sap-icon://group}" text="{i18n>Friends}" press=".friendsRoute" class="sapUiTinyMarginEnd" />
                                        
                                    </Column>
                                    <Column>
                                        <Button id="notificationsButton" icon="{i18n>sap-icon://bell}" text="{i18n>Notifications}" press=".notificationsRoute" class="sapUiTinyMarginEnd"> 
                                        <customData>
                                    <BadgeCustomData
                                        key="badge"
                                        value="2"
                                        visible="true"/>
                                </customData> 
                                </Button>

                                    </Column>
                                    <Column >
                                        <Button id="profileButton" icon="{i18n>sap-icon://customer}" text="{i18n>Profile}" press=".profileRoute" class="sapUiTinyMarginEnd" />
                                    </Column>
                                </columns>
                                
                                
                            </Table>

                            <SearchField width="20%" liveChange=".onSearch" items="/items" />

                                <Title level="H3"
                                    text="Feed"
                                    class="sapUiTinyMargin"
                                    wrappingType="Normal"/>
                                    <List items="{/items}" press="handleMessageToastPress">
                                    
                                        <NotificationListItem
                                            title="{author}"
                                            authorPicture="{thumbnailUrl}"
                                            description="{text}"
                                            datetime="{date}"
                                            showCloseButton="false"
                                            unread="true"
                                            press=".onListItemPress">
                                            <buttons>
                                            <Button id="openResponsivePopoverButton" icon="sap-icon://comment" text="Comment" press=".oncommentPress" />
                                            <Button icon="sap-icon://heart-2" text="Like" press=".onlikePress" />
                                        </buttons>
                                        
                                </NotificationListItem>
                                
                                    </List> 
                                    <ResponsivePopover id="helloResponsivePopover" headerText="Leave a comment...">
                                        <Label text="Comment" required="true" showColon="true" />
                                        <Input placeholder="Enter Comment" />
                                        <!-- <footer>
                                        <Button design="Emphasized" text="Comment" click=".handleClose"
                                            class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
                                        </footer> -->
                                        </ResponsivePopover>
                                   
                                    
                    </ScrollContainer>
                           
                        </content>
                    </Panel>
                    
                </content>
            </Page>
        </pages>
    </App>

  
</mvc:View>